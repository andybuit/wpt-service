{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "pretty": true,
        "sourceMap": true,
        "target": "es2017",
        "outDir": "./dist",
        "baseUrl": "./src",
        "lib": [
            "es2017",
            "esnext.asynciterable",
            "dom"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}